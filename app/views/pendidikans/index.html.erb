<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Pendidikan
<br>
<br>
<%= link_to 'Tambah Pendidikan', new_pendidikan_path, class:'btn btn-primary pull-left' %>
<br>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Jenjang</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pendidikans.each do |pendidikan| %>
      <tr>
        <td><%= pendidikan.jenjang %></td>
        <td><%= link_to 'Show', pendidikan, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_pendidikan_path(pendidikan), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', pendidikan, method: :delete, data: { confirm: 'Anda yakin ingin menghapus?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


