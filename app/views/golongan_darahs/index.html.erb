<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Golongan Darah
<br>
<br>
<%= link_to 'Tambah Golongan darah', new_golongan_darah_path, class:'btn btn-primary pull-left'  %>
<br>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Golongan darah</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @golongan_darahs.each do |golongan_darah| %>
      <tr>
        <td><%= golongan_darah.golongan_darah %></td>
        <td><%= link_to 'Show', golongan_darah, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_golongan_darah_path(golongan_darah), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', golongan_darah, method: :delete, data: { confirm: 'Anda yakin ingin menghapus?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

